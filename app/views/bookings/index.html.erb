<h3> Bookings for 
<%= @store_bicycle.store.name %>
<%= @store_bicycle.bicycle.name %> 
</h3>

<table class="bookings_table">
  <tr>
    <th>Start</th>
    <th>End</th>
  </tr>
  
  <% @bookings.each do |booking| %>
  <tr>
    <td>
      <%= booking.start_time.strftime('%e %b %Y %H:%M%p') %>
    </td>
    <td>
      <%= (booking.calculate_end_time + 60).strftime('%e %b %Y %H:%M%p') %>
    </td>
    <td><%= link_to "Delete", store_bicycle_booking_path(@store_bicycle, booking), data: { confirm: 'Are you sure?' }, method: :delete %>
    </td>
    <td><%= link_to "Edit", edit_store_bicycle_booking_path(@store_bicycle, booking) %>
    </td>
  </tr>
  <% end %>
</table>